@using MVC_Blog.Classes;
@using MVC_Blog.Models;
@model IEnumerable<Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*Заглавия*@    @*@Html.DisplayNameFor(model => model.Title)*@
            @Html.ActionLink("Заглавие", "Index", new { sortOrder = ViewBag.TitleSortParm })
        </th>
        <th>
            Съдържание  @*@Html.DisplayNameFor(model => model.Body)*@
        </th>
        <th>
            @*Дата*@    @*@Html.DisplayNameFor(model => model.Date)*@
            @Html.ActionLink("Дата", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            Автор
        </th>
        <th>
            Действия
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Utils.CutText(item.Body)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @if (item.Author != null)
            {
                @item.Author.UserName
            }
            else
            {
                    @:(Няма Автор)
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
